<div class="page-section">
  <ul class="nav tabs-section" role="tablist">
    <li role="presentation" class="active"><a href="#week" id="week-tab" role="tab" data-toggle="tab" aria-controls="week" aria-expanded="false">This Week</a></li>
    <li role="presentation" class=""><a href="#month" role="tab" id="month-tab" data-toggle="tab" aria-controls="month" aria-expanded="true">This Month</a></li>
    <li role="presentation" aria-expanded="false"><a href="#year" role="tab" id="year-tab" data-toggle="tab" aria-controls="year" aria-expanded="true">This Year</a></li>
  </ul>
</div>

<div class="tab-content">
  <div role="tabpanel" class="tab-pane fade" id="week" aria-labelledby="week-tab">
    <div class="row">
      <% @applications.each do |app| %>
        <div class="col-md-3 mb4">
          <div class="widget-graph">
            <div class="widget">
              <% serie = app.metrics["net_revenue"]["this_week"] %>
              <span class="widget-title">
                app.name
              </span>
              <h2>
                <%= number_to_currency(serie["value"], locale: app.locale) %>
                <small class="<%= (serie['percentage_change'].to_f || 0) > 0 ? 'positive' : 'negative' %>"><%= number_to_percentage(serie["percentage_change"] || 0, precision: 2) %></small>
              </h2>
            </div>
            <canvas id="sparkline1" width="358" height="89" class="apu" data-chart="spark-line" data-value="[{strokeColor: '#1ca8dd', fillColor:'rgba(28,168,221,.03)', data:[28,68,41,43,96,45,100]}]" data-labels="['a', 'b','c','d','e','f','g']" style="width: 358px; height: 89px;"></canvas>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div role="tabpanel" class="tab-pane fade active in" id="month" aria-labelledby="month-tab">
