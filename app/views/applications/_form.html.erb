<%= simple_form_for @application do |f| %>
  <%= f.error_notification %>
  <div class="row">
    <div class="col-md-6">
    	<%= f.input :name %>
    </div>
    <div class="col-md-6">
      <%= f.input :locale, collection: ApplicationHelper::CURRENCIES_SUPPORTED %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <%= f.input :subscription_based, as: :radio_buttons, collection: [['Subscription-based (recurring revenue)', true], ['Classic e-commerce store', false]] %>
    </div>
    <div class="col-md-6">
      <%= f.input :active, as: :radio_buttons %>
    </div>
  </div>

	<div class="form-actions">
    <%= f.button :submit, class: 'btn btn-success' %>
	</div>
<% end %>
