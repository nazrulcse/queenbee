<%= simple_form_for @application do |f| %>
  <%= f.error_notification %>
  <div class="row">
    <div class="col-md-6">
    	<%= f.input :name %>
    </div>
    <div class="col-md-6">
      <%= f.input :locale, collection: ApplicationHelper::CURRENCIES_SUPPORTED %>
    </div>
  </div>
  <%= f.collection_radio_buttons :subscription_based, [[true, 'Subscription-based (recurring revenues)'], [false, 'Classic e-commerce store']], :first, :last, item_wrapper_class: 'radio' %>
	<div class="form-actions">
    <%= f.button :submit, class: 'btn btn-success' %>
	</div>
<% end %>
