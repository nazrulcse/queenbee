<div class="row">
  <div class="col-md-4">
    <div class="panel panel-default">
		  <div class="panel-heading">
		    <h3 class="panel-title">Min. order price
		    	<i class="has-popover glyphicon glyphicon-info-sign pull-right" data-toggle="tooltip" data-placement="bottom" title="Lowest order based on total price"></i></h3>
		  </div>
		  <div class="panel-body">
		    <h2><%= number_to_currency(@min_order) %></h2>
		  </div>
		</div>
  </div>
	<div class="col-md-4">
    <div class="panel panel-default">
		  <div class="panel-heading">
		    <h3 class="panel-title">Median order price
		    <i class="has-popover glyphicon glyphicon-info-sign pull-right" data-toggle="tooltip" data-placement="bottom" title="Median order price (average price) based on total price"></i></h3>
		  </div>
		  <div class="panel-body">
		    <h2><%= number_to_currency(@median_order) %></h2>
		  </div>
		</div>
  </div>
  <div class="col-md-4">
    <div class="panel panel-default">
		  <div class="panel-heading">
		    <h3 class="panel-title">Max. order price
		    <i class="has-popover glyphicon glyphicon-info-sign pull-right" data-toggle="tooltip" data-placement="bottom" title="Highest order based on total price"></i></h3>
		  </div>
		  <div class="panel-body">
		    <h2><%= number_to_currency(@max_order) %></h2>
		  </div>
		</div>
  </div>
</div>