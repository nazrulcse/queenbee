<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
		  <div class="panel-heading">
		    <h3 class="panel-title">Net Revenue (by day)
		    	<i class="has-popover glyphicon glyphicon-info-sign pull-right" data-toggle="tooltip" data-placement="bottom" title="Daily Net Revenue"></i></h3>
		  </div>
		  <div class="panel-body">
		  	<h2><%= number_to_currency @daily_average %> <small>(daily revenue average)</small></h2>
		    <%= line_chart @revenue %>
		  </div>
		</div>
  </div>

  <div class="col-md-12">
    <div class="panel panel-default">
		  <div class="panel-heading">
		    <h3 class="panel-title">Net Revenue (by month)
		    	<i class="has-popover glyphicon glyphicon-info-sign pull-right" data-toggle="tooltip" data-placement="bottom" title="Monthly Net Revenue"></i></h3>
		  </div>
		  <div class="panel-body">
		    <%= column_chart @monthly_revenue %>
		  </div>
		</div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
		  <div class="panel-heading">
		    <h3 class="panel-title">Count of Orders
		    	<i class="has-popover glyphicon glyphicon-info-sign pull-right" data-toggle="tooltip" data-placement="bottom" title="Count of orders by day"></i></h3>
		  </div>
		  <div class="panel-body">
		  	<h2><%= @orders_size %> <small>(total)</small></h2>
		  	<h2><%= @orders_avg %> <small>(average per day)</small></h2>
		    <%= line_chart @orders_count %>
		  </div>
		</div>
  </div>

  <div class="col-md-12">
    <div class="panel panel-default">
		  <div class="panel-heading">
		    <h3 class="panel-title">Average Amount
		    	<i class="has-popover glyphicon glyphicon-info-sign pull-right" data-toggle="tooltip" data-placement="bottom" title="Orders average amount (total price)"></i></h3>
		  </div>
		  <div class="panel-body">
		  	<h2><%= number_to_currency @avg_order %></h2>
		    <%= line_chart @average_price %>
		  </div>
		</div>
  </div>

  <div class="col-md-6">
    <div class="panel panel-default">
		  <div class="panel-heading">
		    <h3 class="panel-title">Orders by Source
		    	<i class="has-popover glyphicon glyphicon-info-sign pull-right" data-toggle="tooltip" data-placement="bottom" title="Orders count by source"></i></h3>
		  </div>
		  <div class="panel-body">
		    <%= column_chart @sources %>
		  </div>
		</div>
  </div>
  <div class="col-md-6">
    <div class="panel panel-default">
		  <div class="panel-heading">
		    <h3 class="panel-title">Clients with most orders
		    	<i class="has-popover glyphicon glyphicon-info-sign pull-right" data-toggle="tooltip" data-placement="bottom" title="Top 10 clients based on orders count (not orders price)"></i></h3>
		  </div>
		  <div class="panel-body">
		    <%= bar_chart @top_clients %>
		  </div>
		</div>
  </div>

  <div class="col-md-6">
    <div class="panel panel-default">
		  <div class="panel-heading">
		    <h3 class="panel-title">Coupon Redemption
		    	<i class="has-popover glyphicon glyphicon-info-sign pull-right" data-toggle="tooltip" data-placement="bottom" title="Most redeemed coupon codes"></i></h3>
		  </div>
		  <div class="panel-body">
		    <%= column_chart @most_used_coupons %>
		  </div>
		</div>
  </div>
  <div class="col-md-6">
    <div class="panel panel-default">
		  <div class="panel-heading">
		    <h3 class="panel-title">Revenue by Coupon
		    	<i class="has-popover glyphicon glyphicon-info-sign pull-right" data-toggle="tooltip" data-placement="bottom" title="Revenue generated by coupon code"></i></h3>
		  </div>
		  <div class="panel-body">
		    <%= column_chart @revenue_by_coupon %>
		  </div>
		</div>
  </div>

  <div class="col-md-6">
    <div class="panel panel-default">
		  <div class="panel-heading">
		    <h3 class="panel-title">Top Countries
		    	<i class="has-popover glyphicon glyphicon-info-sign pull-right" data-toggle="tooltip" data-placement="bottom" title="Orders count by country"></i></h3>
		  </div>
		  <div class="panel-body">
		    <%= geo_chart @top_countries %>
		  </div>
		</div>
  </div>
  <div class="col-md-6">
    <div class="panel panel-default">
		  <div class="panel-heading">
		    <h3 class="panel-title">Top Cities
		    	<i class="has-popover glyphicon glyphicon-info-sign pull-right" data-toggle="tooltip" data-placement="bottom" title="Orders count by city"></i></h3>
		  </div>
		  <div class="panel-body">
		    <%= bar_chart @top_cities, stacked: true %>
		  </div>
		</div>
  </div>

  <div class="col-md-6">
    <div class="panel panel-default">
		  <div class="panel-heading">
		    <h3 class="panel-title">Products Count
		    	<i class="has-popover glyphicon glyphicon-info-sign pull-right" data-toggle="tooltip" data-placement="bottom" title="Orders products count"></i></h3>
		  </div>
		  <div class="panel-body">
		  	<h3><%= @products_avg.round(2) %> <small>(products per order average)</small></h3>
		    <%= column_chart @products_count %>
		  </div>
		</div>
  </div>
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Referral
          <i class="has-popover glyphicon glyphicon-info-sign pull-right" data-toggle="tooltip" data-placement="bottom" title="Top partners/referral sources"></i></h3>
      </div>
      <div class="panel-body">
        <h3><%= @referral %></h3>
        <%= column_chart @referral %>
      </div>
    </div>
  </div>
</div> <!-- end row -->
